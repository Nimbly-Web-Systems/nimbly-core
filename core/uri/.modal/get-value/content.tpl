[module forms]
<h3 class="modal-caption">((title))</h3>
<form class="nb-form">
	[form-key modal-get-value]
	<input type="text" name="value">
	<div>
		<button class="nb-button" data-finalize-modal>OK</button>
		<button class="nb-button nb-button-secondary" data-close-modal>Cancel</button>
	</div>
</form>

