{
  "name": "nimbly",
  "version": "1.0.0",
  "description": "Nimbly Web App Framework",
  "main": "index.php",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "js-build": "cp ./node_modules/medium-editor/dist/js/medium-editor.min.js ext/static/medium-editor.min.js && cp ./node_modules/tw-elements/dist/js/tw-elements.umd.min.js ext/static/tw-elements.umd.min.js && esbuild js/index.jsx --bundle --minify --outfile=ext/static/app.js",
    "css-build": "cp ./node_modules/medium-editor/dist/css/medium-editor.min.css ./css/medium-editor.min.css && esbuild css/index.css --bundle --minify --external:img/* --external:font/* --outfile=ext/static/app.css",
    "tw-build": "npx tailwindcss -i ./css/tw/in.css -o ./css/tw/out.css",
    "text-build": "find -name text.po | xargs msgcat > ext/data/.i18n/bundle.po",
    "tw": "npx tailwindcss -i ./css/tw/in.css -o ./css/tw/out.css --watch",
    "build": "npm run init && npm run tw-build && npm run css-build && npm run js-build && npm run text-build",
    "init": "mkdir -p ./ext/data/.i18n && rsync -u ./core/modules/install/uri/install/tailwind.theme.js ./ext/tailwind.theme.js && touch ./ext/theme.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nimbly-Web-Systems/nimbly-core.git"
  },
  "author": "Nimbly Web Systems",
  "license": "ISC",
  "bugs": {
    "url": "git@github.com:Nimbly-Web-Systems/nimbly-core.git/issues"
  },
  "homepage": "git@github.com:Nimbly-Web-Systems/nimbly-core.git#readme",
  "dependencies": {
    "alpinejs": "^3.13.2",
    "medium-editor": "^5.23.3",
    "tw-elements": "^1.0.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "esbuild": "0.19.5"
  }
}
